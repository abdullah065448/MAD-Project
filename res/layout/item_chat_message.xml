<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#12243C"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/chat_item_container_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile"
            app:shapeAppearanceOverlay="@drawable/ic_circle_placeholder" />

        <View
            android:id="@+id/status_dot_id"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignEnd="@id/img_id"
            android:layout_alignBottom="@id/img_id"
            android:background="@drawable/circle_green"
            android:elevation="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@id/time_id"
            android:layout_toEndOf="@id/img_id"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sara Jenkins"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/msg_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Sent you the updated assets."
                android:textColor="#90FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="10:45 AM"
            android:textColor="#3DA9FC"
            android:textSize="11sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>