<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_launcher_back_24"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Log In"
        android:textColor="#66FFFFFF"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="30dp"
        android:text="Start Your\nJourney"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_marginTop="12dp"
        android:text="Connect with premium clients and manage your freelance business like a pro."
        android:textColor="#CCFFFFFF"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/txtDesc"
        android:layout_marginTop="24dp"
        android:hint="username@example.com"
        android:background="@drawable/bg_input"
        android:padding="16dp"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="#88FFFFFF"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/edtEmail"
        android:layout_marginTop="16dp"
        android:hint="Create a strong password"
        android:background="@drawable/bg_input"
        android:padding="16dp"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="#88FFFFFF"/>

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/edtPassword"
        android:layout_marginTop="16dp"
        android:hint="Re-enter password"
        android:background="@drawable/bg_input"
        android:padding="16dp"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="#88FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtConfirmPassword"
        android:layout_marginTop="16dp"
        android:text="Select Role"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

    <Spinner
        android:id="@+id/spinnerRole"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/edtConfirmPassword"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input"
        android:padding="16dp"
        android:spinnerMode="dropdown"
        android:popupBackground="@android:color/white"/>

    <CheckBox
        android:id="@+id/chkTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerRole"
        android:layout_marginTop="16dp"
        android:text="I agree to the Term of Service and Privacy Policy"
        android:textColor="#99FFFFFF"
        android:buttonTint="@android:color/white"/>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/chkTerms"
        android:layout_marginTop="24dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@drawable/bg_button"/>

    <TextView
        android:id="@+id/txtOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="or continue with"
        android:textColor="#88FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOr"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_social"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Apple"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_social"/>
    </LinearLayout>

</RelativeLayout>