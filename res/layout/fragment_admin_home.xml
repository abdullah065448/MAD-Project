<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E1A">

    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_admin_avatar" />

                <TextView
                    android:id="@+id/txt_admin_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/img_profile"
                    android:layout_marginStart="12dp"
                    android:text="ADMIN"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_admin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_admin_label"
                    android:layout_toEndOf="@id/img_profile"
                    android:layout_marginStart="12dp"
                    android:text="Ezan Ali"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_notification_bell" />
            </RelativeLayout>

            <!-- STATUS CHIPS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_system_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_green"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="SYSTEM ONLINE"
                    android:textColor="#4CAF50"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_ai_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_chip_blue"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="AI Model"
                    android:textColor="#4A90E2"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- FREELANCER & ACTION GRID -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="2">

                <!-- FREELANCERS -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_freelancers"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="openFreelancers"
                    app:cardBackgroundColor="#161B2A"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt_freelancer_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FREELANCERS"
                            android:textColor="#B0B0B0"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/txt_freelancer_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,240"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ACTION NEEDED -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_actions"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="openActions"
                    app:cardBackgroundColor="#161B2A"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt_action_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FREELANCERS"
                            android:textColor="#B0B0B0"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/txt_action_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_action_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Action Needed"
                            android:textColor="#FF5722"
                            android:textSize="11sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- PENDING VERIFICATION -->
            <TextView
                android:id="@+id/txt_pending_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pending Verification"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#161B2A"
                app:cardElevation="4dp">

                <!-- Container for dynamic pending freelancers -->
                <LinearLayout
                    android:id="@+id/pending_freelancers_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <!-- Each pending freelancer will be added here dynamically -->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SYSTEM HEALTH -->
            <TextView
                android:id="@+id/txt_system_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="System Health"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_system_health"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#161B2A"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85%"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="85"
                        android:progressTint="#4CAF50" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- NOTIFICATIONS -->
            <TextView
                android:id="@+id/txt_notifications_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Notifications"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#161B2A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txt_notification_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification 1"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#252B3D"/>

                    <TextView
                        android:id="@+id/txt_notification_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification 2"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#252B3D"/>

                    <TextView
                        android:id="@+id/txt_notification_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification 3"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
